{
  "compilerOptions": {
    "allowJs": true,
    "target": "es2020",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSources": false,
    "removeComments": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
